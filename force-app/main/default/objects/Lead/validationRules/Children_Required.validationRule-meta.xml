<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Children_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
Children__c = TRUE,
ISBLANK(Children_Info__c)
)</errorConditionFormula>
    <errorDisplayField>Children_Info__c</errorDisplayField>
    <errorMessage>Please enter info about the Client&apos;s children.</errorMessage>
</ValidationRule>
