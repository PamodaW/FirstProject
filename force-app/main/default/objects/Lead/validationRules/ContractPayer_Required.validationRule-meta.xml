<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ContractPayer_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(Contract_Payer__c, &quot;&quot;),
Contract_Value__c  &lt;&gt;  0
)</errorConditionFormula>
    <errorDisplayField>Contract_Payer__c</errorDisplayField>
    <errorMessage>Please select a Contract Payer.</errorMessage>
</ValidationRule>
