<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>LeadSourceOther_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(LeadSource, &quot;Other&quot;),
ISBLANK(Lead_Source_Other__c)
)</errorConditionFormula>
    <errorDisplayField>Lead_Source_Other__c</errorDisplayField>
    <errorMessage>Please enter the Lead Source Other.</errorMessage>
</ValidationRule>
